{
  "name": "@shgulati/www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,mdx,json}\"",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "analyze": "dotenv -v ANALYZE=true pnpm with-env next build"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^14.0.4",
    "@radix-ui/react-context": "^1.0.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^2.0.2",
    "@t3-oss/env-nextjs": "^0.7.1",
    "cmdk": "^0.2.0",
    "copy-to-clipboard": "^3.3.3",
    "next": "^14.0.4",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@next/bundle-analyzer": "^14.0.4",
    "@shgulati/eslint-config": "workspace:^0.2.0",
    "@shgulati/postcss-config": "workspace:^0.1.0",
    "@shgulati/prettier-config": "workspace:^0.1.0",
    "@shgulati/tsconfig": "workspace:^0.1.0",
    "@types/mdx": "^2.0.10",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "gray-matter": "^4.0.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "reading-time": "^1.5.0",
    "rehype-pretty-code": "^0.12.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@shgulati/eslint-config/base",
      "@shgulati/eslint-config/nextjs",
      "@shgulati/eslint-config/react"
    ]
  },
  "prettier": "@shgulati/prettier-config"
}
