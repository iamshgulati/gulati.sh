{
  "name": "@shgulati/www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev & pnpm watch-data",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,mdx,json}\"",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "analyze": "dotenv -v ANALYZE=true pnpm with-env next build",
    "watch-data": "ts-node -O '{\"module\": \"nodenext\"}' ./src/scripts/watcher.ts"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.1.4",
    "@radix-ui/react-context": "^1.0.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^3.0.0",
    "@t3-oss/env-nextjs": "^0.9.2",
    "cmdk": "^1.0.0",
    "next": "^14.1.4",
    "next-themes": "1.0.0-beta.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-wrap-balancer": "^1.1.0",
    "sharp": "^0.33.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@next/bundle-analyzer": "^14.1.4",
    "@shgulati/eslint-config": "workspace:^0.2.0",
    "@shgulati/postcss-config": "workspace:^0.1.0",
    "@shgulati/prettier-config": "workspace:^0.1.0",
    "@shgulati/tsconfig": "workspace:^0.1.0",
    "@types/mdx": "^2.0.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@types/ws": "^8.5.10",
    "chokidar": "^3.6.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "shikiji": "^0.10.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "ws": "^8.16.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@shgulati/eslint-config/base",
      "@shgulati/eslint-config/nextjs",
      "@shgulati/eslint-config/react"
    ]
  },
  "prettier": "@shgulati/prettier-config"
}
