    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^3.0.3",
    "@t3-oss/env-nextjs": "^0.10.1",
    "cmdk": "^1.0.0",
    "next": "^14.2.3",
    "next-themes": "1.0.0-beta.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.3",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@next/bundle-analyzer": "^14.2.3",
    "@shgulati/eslint-config": "workspace:^0.3.0",
    "@shgulati/postcss-config": "workspace:^0.1.0",
    "@shgulati/prettier-config": "workspace:^0.1.0",
    "@shgulati/tsconfig": "workspace:^0.1.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "chokidar": "^3.6.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.1.1",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "shikiji": "^0.10.2",
    "jiti": "^1.21.0",
    "typescript": "^5.4.5",
    "ws": "^8.17.0"
