{
  "name": "shgulati",
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules dist .next",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo watch dev",
    "dev:web": "turbo watch dev -F @shgulati/www...",
    "format": "turbo run format --continue -- --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "lint": "turbo run lint --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@shgulati/prettier-config": "workspace:^0.1.0",
    "@turbo/gen": "^2.0.4",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.19.8"
    }
  },
  "prettier": "@shgulati/prettier-config"
}
